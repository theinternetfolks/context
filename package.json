{
  "name": "@theinternetfolks/context",
  "version": "2.2.0",
  "description": "Library to help you create a context that can be used to reference data, without prop drilling, in Node-based environments.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:map": "tsc -d --declarationDir . --declarationMap --emitDeclarationOnly",
    "test": "bun test --coverage-reporter=lcov --coverage-reporter=text --coverage",
    "test-coverage": "lcov-viewer lcov -o ./coverage ./coverage/lcov.info"
  },
  "author": "Sameer Khan <sameer.khan@theinternetfolks.com>",
  "organization": "The Internet Folks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theinternetfolks/context.git"
  },
  "files": [
    "index.js",
    "index.js.map",
    "index.d.ts",
    "index.d.ts.map",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.2.3",
    "@types/express": "^4.17.17",
    "@types/k6": "^0.57.1",
    "@types/node": "^16.11.12",
    "express": "^4.18.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "node",
    "context",
    "prop drilling",
    "async hooks",
    "request context",
    "request variables"
  ],
  "packageManager": "pnpm@10.5.0"
}